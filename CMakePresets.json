{
  "version": 8,
  "configurePresets": [
    {
      "name": "profile",
      "displayName": "Profiling Build",
      "description": "Optimized build with debug symbols and frame pointers for perf.",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/profile",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "RelWithDebInfo",
        "CMAKE_CXX_FLAGS": "-fno-omit-frame-pointer",
        "CMAKE_VERBOSE_MAKEFILE": "ON",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      }
    },
    {
      "name": "profile-spdlog",
      "inherits": "profile",
      "displayName": "Profiling Build (spdlog)",
      "description": "Profile build with spdlog logger backend.",
      "cacheVariables": {
        "SPDLOG_LOGGER": "ON",
        "STDERR_LOGGER": "OFF"
      }
    },
    {
      "name": "profile-stderr",
      "inherits": "profile",
      "displayName": "Profiling Build (stderr)",
      "description": "Profile build with stderr logger backend.",
      "cacheVariables": {
        "SPDLOG_LOGGER": "OFF",
        "STDERR_LOGGER": "ON"
      }
    },
    {
      "name": "release",
      "displayName": "Release Build",
      "description": "Standard release build with optimizations.",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      }
    },
    {
      "name": "debug",
      "displayName": "Debug Build",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_VERBOSE_MAKEFILE": "ON",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "profile",
      "configurePreset": "profile"
    },
    {
      "name": "release",
      "configurePreset": "release"
    },
        {
      "name": "debug",
      "configurePreset": "debug"
    }
  ]
}